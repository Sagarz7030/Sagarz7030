#include <stdio.h>//header file
 
int main() //entry point function 
{
	int a, b; //declare the variables 
	int add; //to store the addition
	
	//take two values from user for variables a and b
	
	printf("Enter the value of a : \n");
	scanf("%d",&a);
	printf("Enter the value of b : \n");
	scanf("%d",&b);
	
	add = a + b;//logic for addition 
	
	printf("Addition of a and b is : %d",add);//prints the output 
	
	
	return 0; // send's the messege to the operating system that program is successfully done
}
 
